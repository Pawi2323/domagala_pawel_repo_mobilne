<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/amogus"
    android:backgroundTint="#BF1E285A"
    android:backgroundTintMode="src_over"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/pd_Username_file1"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:shadowColor="#FFFFFF"
        android:text="Username"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/pd_guideline_file1"
        app:layout_constraintStart_toStartOf="@+id/pd_guideline_file1"
        app:layout_constraintTop_toBottomOf="@+id/pd_Logo_file1" />

    <EditText
        android:id="@+id/pd_Password_file1"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:shadowColor="#FFFFFF"
        android:text="Password"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/pd_guideline_file1"
        app:layout_constraintStart_toStartOf="@+id/pd_guideline_file1"
        app:layout_constraintTop_toBottomOf="@+id/pd_Username_file1" />

    <ImageView
        android:id="@+id/pd_Logo_file1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintEnd_toStartOf="@+id/pd_guideline_file1"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="@+id/pd_guideline_file1"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteY="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pd_guideline_file1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <Button
        android:id="@+id/pd_Button_Login_file1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/files"
        android:backgroundTint="#BFCA5D6F"
        android:backgroundTintMode="src_in"
        android:text="LOGIN"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/pd_guideline_file1"
        app:layout_constraintStart_toStartOf="@+id/pd_guideline_file1"
        app:layout_constraintTop_toBottomOf="@+id/pd_Password_file1" />

    <Button
        android:id="@+id/pd_Button_Singup_file1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/files"
        android:backgroundTint="#BFCA5D6F"
        android:backgroundTintMode="src_in"
        android:text="SING UP"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/pd_guideline_file1"
        app:layout_constraintStart_toStartOf="@+id/pd_guideline_file1"
        app:layout_constraintTop_toBottomOf="@+id/pd_OR_file1" />

    <Button
        android:id="@+id/pd_Button_fb_file1"
        android:drawableLeft="@drawable/facebook"
        android:drawablePadding="-10dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/files"
        android:backgroundTint="#BFCA5D6F"
        android:backgroundTintMode="src_in"
        android:text="Facebook"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/pd_guideline_file1"
        app:layout_constraintTop_toBottomOf="@+id/pd_Button_Singup_file1" />

    <Button
        android:id="@+id/pd_Button_ig_file1"
        android:drawableLeft="@drawable/instagram"
        android:drawablePadding="-10dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/files"
        android:backgroundTint="#BFCA5D6F"
        android:backgroundTintMode="src_in"
        android:text="Instagram"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/pd_guideline_file1"
        app:layout_constraintTop_toBottomOf="@+id/pd_Button_Singup_file1" />

    <Button
        android:id="@+id/pd_Button_tw_file1"
        android:drawableLeft="@drawable/twitter"
        android:drawablePadding="-10dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/files"
        android:backgroundTint="#BFCA5D6F"
        android:backgroundTintMode="src_in"
        android:text="Twitter"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/pd_guideline_file1"
        app:layout_constraintStart_toStartOf="@+id/pd_guideline_file1"
        app:layout_constraintTop_toBottomOf="@+id/pd_Button_Singup_file1" />

    <TextView
        android:id="@+id/pd_OR_file1"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:text="━━━━━━━━━  OR  ━━━━━━━━━"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        app:layout_constraintEnd_toStartOf="@+id/pd_guideline_file1"
        app:layout_constraintStart_toStartOf="@+id/pd_guideline_file1"
        app:layout_constraintTop_toBottomOf="@+id/pd_Button_Login_file1" />
</androidx.constraintlayout.widget.ConstraintLayout>